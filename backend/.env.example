# Server Configuration
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development

# Database
DATABASE_URL=./data/prism.db

# Security (CHANGE THESE IN PRODUCTION)
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/github/callback

# Ollama (local LLM)
OLLAMA_HOST=http://localhost:11434

# Sandbox Configuration
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=0.5
SANDBOX_TIMEOUT=60s

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173

# File Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=./data/uploads

# ======================
# Integration Settings
# ======================

# Discord Integration
# Get your webhook URL from Discord Server Settings > Integrations > Webhooks
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=
DISCORD_BOT_TOKEN=

# Slack Integration
# Create an app at https://api.slack.com/apps and get your tokens
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

# PostHog Analytics
# Get your API key from https://app.posthog.com/project/settings
POSTHOG_ENABLED=false
POSTHOG_API_KEY=
POSTHOG_ENDPOINT=https://app.posthog.com
POSTHOG_BATCH_SIZE=10
POSTHOG_FLUSH_INTERVAL=30s
